{
  // General settings
  "breadcrumbs.enabled": true,
  "debug.toolBarLocation": "docked",
  "editor.autoClosingQuotes": "beforeWhitespace",
  "editor.autoIndent": "advanced",
  "editor.bracketPairColorization.enabled": false,
  "editor.cursorBlinking": "phase",
  "editor.detectIndentation": false,
  "editor.inlineSuggest.enabled": true,
  "editor.insertSpaces": true,
  "editor.fontFamily": "'Dank Mono', 'Rec Mono Duotone', 'Fira Code', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.renderWhitespace": "none",
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.unicodeHighlight.nonBasicASCII": true,
  "editor.wordWrap": "off",
  "emmet.triggerExpansionOnTab": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.decorations.badges": false,
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "extensions.ignoreRecommendations": true,
  "extensions.supportUntrustedWorkspaces": {
    "streetsidesoftware.code-spell-checker": {
      "supported": "limited"
    },
    "yzhang.markdown-all-in-one": {
      "supported": "limited"
    }
  },
  "files.associations": {
    "**/.env*": "dotenv",
    "**/env*": "dotenv"
  },
  "files.autoSave": "onWindowChange",
  "files.exclude": {
    "**/._*": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/.venv/**": true
  },
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "telemetry.telemetryLevel": "off",
  "terminal.external.osxExec": "Terminal.app",
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.tabs.enabled": false,
  "update.mode": "manual",
  "update.showReleaseNotes": false,
  "window.newWindowDimensions": "maximized",
  "window.restoreWindows": "all",
  "window.zoomLevel": 1,
  "workbench.colorTheme": "Dracula Pro",
  "workbench.editor.historyBasedLanguageDetection": false,
  "workbench.editor.languageDetection": false,
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.editorAssociations": {
    "git-rebase-todo": "default",
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.enableExperiments": false,
  "workbench.fontAliasing": "auto",
  "workbench.settings.editor": "json",
  "workbench.settings.enableNaturalLanguageSearch": false,
  "workbench.startupEditor": "none",
  // Git
  "[git-commit][git-rebase]": {
    "editor.quickSuggestions": {
      "comments": "off",
      "other": "off",
      "strings": "off"
    }
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "git.autofetch": false,
  "git.autoRepositoryDetection": "subFolders",
  "git.confirmSync": false,
  "git.enableCommitSigning": true,
  "git.enableSmartCommit": true,
  "git.mergeEditor": false,
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": false,
    "git-commit": false,
    "ruby": false
  },
  "gitlens.advanced.abbreviatedShaLength": 7,
  "gitlens.advanced.abbreviateShaOnCopy": true,
  "gitlens.blame.avatars": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.defaultDateFormat": "YYYY-MM-DD",
  "gitlens.defaultDateShortFormat": "YYYYMMDD",
  "gitlens.defaultDateStyle": "absolute",
  "gitlens.hovers.avatars": false,
  "gitlens.menus": {
    "editorGroup": false
  },
  "gitlens.statusBar.reduceFlicker": true,
  "gitlens.views.branches.avatars": false,
  "gitlens.views.commits.avatars": false,
  "gitlens.views.contributors.avatars": false,
  "gitlens.views.fileHistory.avatars": false,
  "gitlens.views.formats.commits.description": "${author, }${date}",
  "gitlens.views.formats.stashes.description": "${date}",
  "gitlens.views.remotes.avatars": false,
  "gitlens.views.repositories.avatars": false,
  "gitlens.views.searchAndCompare.avatars": false,
  "gitlens.views.tags.avatars": false,
  "merge-conflict.autoNavigateNextConflict.enabled": true,
  // Language-specific settings
  "aws.onDefaultRegionMissing": "add",
  "aws.profile": "profile:default",
  "aws.telemetry": false,
  "cSpell.diagnosticLevel": "Information",
  "cSpell.enableFiletypes": ["!jsonc"],
  "cSpell.import": ["~/.dotfiles/vscode/User/cspell.json"],
  "cSpell.spellCheckDelayMs": 5000,
  "deno.unstable": false,
  "[dockerfile]": {
    "editor.formatOnSave": false
  },
  "eslint.enable": false,
  "go.survey.prompt": false,
  "go.toolsManagement.autoUpdate": false,
  "go.toolsManagement.checkForUpdates": "local",
  "gopls": { "ui.semanticTokens": true },
  "grunt.autoDetect": "off",
  "gulp.autoDetect": "off",
  "[html][javascript][json][jsonc][markdown][typescript][vue][yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "markdown.extension.italic.indicator": "_",
  "markdown.extension.list.indentationSize": "inherit",
  "markdown.extension.print.absoluteImgPath": false,
  "markdown.extension.toc.slugifyMode": "github",
  "markdown.extension.toc.levels": "2..3",
  "markdown.extension.toc.updateOnSave": true,
  "[plaintext]": {
    "editor.quickSuggestions": {
      "comments": "off",
      "other": "off",
      "strings": "off"
    }
  },
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "always",
      "source.organizeImports": "always"
    },
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.rulers": [],
    "editor.tabSize": 4
  },
  "black-formatter.importStrategy": "fromEnvironment",
  "flake8.args": ["--max-line-length", "88"],
  "flake8.importStrategy": "fromEnvironment",
  "isort.args": ["--profile", "black"],
  "isort.importStrategy": "fromEnvironment",
  "mypy-type-checker.args": [
    "--follow-imports=silent",
    "--ignore-missing-imports",
    "--install-types",
    "--show-column-numbers",
    "--show-error-codes"
  ],
  "mypy-type-checker.importStrategy": "fromEnvironment",
  "pylance.insidersChannel": "off",
  "python.analysis.completeFunctionParens": false,
  "python.analysis.typeCheckingMode": "off",
  "python.disableInstallationCheck": true,
  "python.experiments.enabled": false,
  "python.insidersChannel": "off",
  "python.languageServer": "Jedi",
  "python.pythonPath": "python3",
  "python.showStartPage": false,
  "python.testing.autoTestDiscoverOnSaveEnabled": false,
  "python.testing.promptToConfigure": false,
  "ruff.lint.args": ["--extend-select=I"],
  "redhat.telemetry.enabled": false,
  "shellcheck.enable": true,
  "shellcheck.run": "onSave",
  "shellcheck.exclude": [
    "SC1071", // only supports sh/bash/dash/ksh
    "SC1090", // can't follow non-constant source
    "SC1091" // not following source
  ],
  "shellcheck.ignoreFileSchemes": ["git", "gitfs"],
  "shellcheck.ignorePatterns": {
    "**/*.zsh": false,
    "**/*.zshrc": false,
    "**/zshrc": false
  },
  "shellformat.effectLanguages": ["shellscript"],
  "shellformat.path": "/opt/homebrew/bin/shfmt",
  "[shellscript]": {
    "editor.rulers": [],
    "files.eol": "\n"
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "svelte.enable-ts-plugin": true,
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "evenBetterToml.formatter.allowedBlankLines": 1,
  "evenBetterToml.formatter.arrayAutoCollapse": false,
  "evenBetterToml.formatter.reorderArrays": true,
  "evenBetterToml.formatter.reorderKeys": true,
  "evenBetterToml.formatter.trailingNewline": true,
  "vetur.experimental.templateInterpolationService": true,
  "vetur.format.defaultFormatter.css": "prettier",
  "vetur.format.defaultFormatter.html": "prettier",
  "vetur.format.defaultFormatter.js": "prettier",
  "vetur.format.defaultFormatter.ts": "prettier",
  "vetur.format.options.tabSize": 2,
  "vetur.format.options.useTabs": false,
  "vetur.ignoreProjectWarning": true,
  "yaml.format.enable": false
}
